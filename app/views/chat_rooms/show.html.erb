<h1 class="text-3xl mb-4"><%= @chat_room.topic %></h1>

<div class="flex">
  <div class="w-1/3">
    <%= render partial: 'chat_rooms' %>
  </div> 

  <div class="w-2/3">
    <div class='bg-gray-200 h-full mb-2'>
      <% @messages.each do |message| %>
        <div class='flex text-white p-4'>
          <div class='bg-blue-500 w-full p-2 rounded'>
            <%= message.content %>
  
            <div class='text-sm font-hairline float-right'>
            <small> <%= message.created_at %> </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= form_with model: @message, remote: true do |form| %>
      <div class="flex justify-between">
        <%= form.text_field :content, class: "border rounded px-3 text-gray-700 w-full" %>
        <div class="pl-2">
          <%= form.submit "Send", class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-full' %>
        </div>
      </div>

      <%= form.hidden_field :chat_room_id %>
    <% end %>
  </div>
</div>
