<div class="mb-4">
  <%= link_to new_chat_room_path, class: "bg-transparent border border-blue-500 text-blue-500 hover:bg-blue-100 py-2 px-4 mb-3 rounded" do %>
    Create a chat room
  <% end %>
</div>

<% if @chat_rooms.present? %>
  <div class="flex flex-col w-2/3 px-2 py-1 border bg-blue-100 shadow">
    <% @chat_rooms.each do |chat_room| %>
      <%= link_to chat_room.topic, chat_room_path(chat_room), class: 'text-blue-700 py-1' %>
    <% end %>
  </div>
<% else %>
  <div>
    There are no rooms
  </div>
<% end %>
